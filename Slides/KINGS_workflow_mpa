conda activate mpa
module load apps/bowtie2/2.3.5.1

srun metaphlan SRR16348844_1.fastq.gz,SRR16348844_2.fastq.gz --bowtie2out SRR16348844.bowtie2.bz2 --input_type fastq > SRR16348844_profile_count.txt -t rel_ab_w_read_stats










